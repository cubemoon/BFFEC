<div class="panel">
    <div class="inner">
      <div class="header clearfix">
        社区话题<a href="/createTopic" id="create_topic_btn">
            <button class="btn btn-success">发布话题</button>
          </a>
      </div>
      <div id="topic_list">

      <% for(var i=0; i<objArr.length; i++) { %>
        <input id="totalPages" type="hidden" value="<%= objArr[i]['totalPages'] %>" />
        <div class="cell">
          <div class="user_avatar block">
            <a target="_blank" href="user/<%= objArr[i]['uid'] %>" title="<%= objArr[i]['uname'] %>">
              <img src="<%= objArr[i]['avatar'] %>">
            </a>
          </div>
          <div class="block count">
            <a target="_blank" href="/topic/<%= objArr[i]['mid'] %>" title="回复数"><%= objArr[i]['replyCount'] %></a>/<span title="点击数"><%= objArr[i]['clickCount'] %></span>
          </div>
          <div class="topic_wrap">
              <a target="_blank" href="/topic/<%= objArr[i]['mid'] %>">
                  <%= objArr[i]['title'] %>
              </a>
          </div>
          <div class="last_time"> <%= objArr[i]['time'] %></div>
        </div>
      <% } %>



		<div id="example" class="pagination" current_page="1">
			<ul>
			</ul>
		</div>
		<script>
      var page = window.location.search.split('=')[1];
      var totalPages = $('#totalPages').val() || 1;
      
      var options = {
             currentPage: page || 1,
              totalPages: totalPages,
           numberOfPages:10,
          onPageClicked : function(event,originalEvent,type,page) {
              window.location.href = '/topicList?page='+page;
            }
        }
      $('#example').bootstrapPaginator(options);
    </script>
    </div>
  </div>
</div>